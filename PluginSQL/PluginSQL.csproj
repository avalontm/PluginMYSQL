<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <Authors>AvalonTM</Authors>
    <Description>Plugin para simplificar el uso de MYSQL Multiplataforma [XAMARIN, WINDOWS, LINUX, MAC, ANDROID, IOS, UWP].</Description>
    <Copyright>AvalonTM</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageIcon>plugin_logo.png</PackageIcon>
    <PackageTags>mySQL; Xamarin; database; db; portable</PackageTags>
    <Version>1.0.9</Version>
    <PackageProjectUrl>https://github.com/avalontm/PluginMYSQL/wiki/MYSQL</PackageProjectUrl>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/avalontm/PluginMYSQL</RepositoryUrl>
    <AssemblyVersion>1.0.7.0</AssemblyVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>D:\GitHub\PluginMYSQL\PluginSQL\PluginSQL.xml</DocumentationFile>
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="plugin_logo.png" />
    <None Remove="plugin_logo.png" />
    <None Remove="PrimaryKeyAttribute.xaml" />
    <None Include="plugin_logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="plugin_logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MySql.Data" Version="8.0.29" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Page Include="PrimaryKeyAttribute.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

</Project>
